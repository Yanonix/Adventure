<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:aventure="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:padding="0dp" tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <com.aventure.Tile
                android:layout_weight="1.0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="clickA"
                aventure:text="Repeat"
                aventure:backText="↺"
                aventure:textColor="@android:color/white"
                aventure:textSize="15sp"
                aventure:backgroundColor="@android:color/holo_green_light"
                />

            <com.aventure.Tile
                android:layout_weight="1.0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="clickB"
                aventure:text="Undo"
                aventure:backText="↶"
                aventure:textColor="@android:color/white"
                aventure:textSize="15sp"
                aventure:backgroundColor="@android:color/holo_green_dark"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:baselineAligned="false">

            <com.aventure.Tile
                android:layout_weight="1.0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="clickC"
                aventure:text="Home"
                aventure:backText="↩"
                aventure:textColor="@android:color/white"
                aventure:textSize="15sp"
                aventure:backgroundColor="@android:color/holo_green_dark"
                />

            <com.aventure.Tile
                android:layout_weight="1.0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="clickD"
                aventure:text="Resume"
                aventure:backText="&#9654;"
                aventure:textColor="@android:color/white"
                aventure:textSize="15sp"
                aventure:backgroundColor="@android:color/holo_green_light"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>