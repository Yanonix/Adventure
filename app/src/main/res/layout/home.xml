                aventure:backgroundColor="@android:color/holo_blue_light"
                />-->

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@android:color/holo_blue_bright">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audio book"
                    android:textColor="#18000000"
                    android:textSize="200sp"
                    android:layout_weight="1.0"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"  />

                <TextView
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Adventure"
                    android:textColor="#ff313131"
                    android:textStyle="bold"
                    android:layout_weight="1.0"
                    android:textSize="50sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingLeft="200sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@drawable/icon100_com_255"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="301dp"
                    android:layout_alignParentLeft="true"
                    android:adjustViewBounds="false"
                    android:paddingLeft="-20sp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:baselineAligned="false">


            <com.aventure.Tile
                android:layout_weight="1.0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="clickA"
                aventure:text="Start a story"
                aventure:backText="&#9654;"
                aventure:textColor="@android:color/white"
                aventure:textSize="15sp"
                aventure:backgroundColor="@android:color/holo_blue_light"
                />



            <com.aventure.Tile
                android:layout_weight="1.0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="clickB"
                aventure:text="Buy books"
                aventure:backText="+"
                aventure:textColor="@android:color/white"
                aventure:textSize="15sp"
                aventure:backgroundColor="@android:color/holo_blue_dark"
                />


